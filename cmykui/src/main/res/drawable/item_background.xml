<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <!--<solid android:color="#DEB887"/>
            <stroke android:color="#8A2BE2" android:width="2dp" />
            corners allow us to make the rounded corners button-->
            <gradient
                android:angle="180"
                android:startColor="#FFFFFFFF"
                android:endColor="#FFe5e5e5"
                android:type="linear" />
            <corners android:radius="0dp"
                />
        </shape>
    </item>

    <item android:bottom="1dp" android:top="0dp" android:left="0dp" android:right="0dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="#FFDDDDDD" />
            <solid android:color="#00000000" />
        </shape>
    </item>

</layer-list>