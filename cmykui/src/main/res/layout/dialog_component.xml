<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="10dp"
android:background="#F5F5F5">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Dodaj konekciju"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textColor="#222222"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceLarge"/>

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Naziv konekcije"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#888888"
        />

    <EditText
        android:id="@+id/connectionName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textNoSuggestions"
        android:text="" />



    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Å ifra konekcije"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#888888"
        android:paddingTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/connectionID1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textCapCharacters"
            android:maxLength="2"
            android:textAlignment="center"
            android:text="" />

        <TextView
            android:id="@+id/connectiontext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#000000"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/connectionID2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textCapCharacters"
            android:maxLength="2"
            android:textAlignment="center"
            android:text="" />

        <TextView
            android:id="@+id/connectiontext3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#000000"

            android:textAlignment="center"
            />
        <EditText
            android:id="@+id/connectionID3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textCapCharacters"
            android:maxLength="2"
            android:textAlignment="center"
            android:text="" />

        <TextView
            android:id="@+id/connectiontext4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#000000"
            />
        <EditText
            android:id="@+id/connectionID4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textCapCharacters"
            android:textAlignment="center"
            android:maxLength="2"
            android:text="" />

        <TextView
            android:id="@+id/connectiontext5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#000000"
            />
        <EditText
            android:id="@+id/connectionID5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textCapCharacters"
            android:textAlignment="center"
            android:maxLength="2"
            android:text="" />

        <TextView
            android:id="@+id/connectiontext6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#000000"
            />
        <EditText
            android:id="@+id/connectionID6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textCapCharacters"
            android:maxLength="2"
            android:text="" />




    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PIN konekcije"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#888888"
        android:paddingTop="20dp"
        />

    <TextView
        android:id="@+id/connectionPIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1234"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="10dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/odustani"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F5F5F5"
            android:text="Odustani" />

        <Button
            android:id="@+id/spremi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F5F5F5"
            android:text="Spremi" />
    </LinearLayout>


</LinearLayout>

</LinearLayout>